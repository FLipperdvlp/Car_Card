@model IEnumerable<MVC_Cars_Cards.Entities.Car>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Market - Cars Listing</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .car-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }
        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .car-header {
            font-size: 1.4rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        .car-price {
            font-size: 1.3rem;
            color: #e63946;
            font-weight: bold;
            margin: 10px 0;
        }
        .car-details {
            display: flex;
            gap: 15px;
            margin-bottom: 10px;
        }
        .car-detail {
            background: #f8f9fa;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.9rem;
        }
        .accident-badge {
            background: #dc3545;
            color: white;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            display: inline-block;
        }
    </style>
</head>

<body>

<div class="header">
    <div class="car-list">
        <h1 class="text-center mb-0">AUTO RIA</h1>
    </div>
</div>

<div class="container-car-list">
    <h2 class="page-title">Cars in our list</h2>
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                
            <div class="car-card">
                <div class="card-body">
                    <div class="car-header">
                        @car.Company @car.Model
                        @if (car.WasInAccident)
                        {
                            <span class="accident-badge">Accident</span>
                        }
                    </div>
                    <div class="car-price">$@car.Price.ToString("N0")</div>
                    <div class="car-details">
                        <span class="car-detail">@car.Year year</span>
                        <span class="car-detail">@car.Mileage.ToString("N0") km</span>
                    </div>
                </div>
            </div>
            </div>
        }
    </div>
</div>
</body>
</html>